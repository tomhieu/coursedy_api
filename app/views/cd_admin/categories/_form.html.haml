.row
  .col-sm-6
    = form_for [:cd_admin, @category] do |f|
      - if @category.errors.any?
        #error_explanation
          %h2= "#{pluralize(@category.errors.count, "error")} prohibited this cd_admin_course from being saved:"
          %ul
            - @category.errors.full_messages.each do |message|
              %li= message

      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label 'Name (English)'
        = f.text_area :en_lang_name, class: 'form-control'
      .form-group
        = f.submit 'Save', class: 'btn btn-primary'
